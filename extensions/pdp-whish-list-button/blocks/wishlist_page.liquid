{% style %}
.premier-wishlist-page .main-page-title,
.premier-wishlist-page .page-title {
  display: none !important;
}
.wishlist-page {
  max-width: 980px;
  margin: 0 auto;
  padding: 32px 16px;
}

.wishlist-page__title {
  margin-bottom: 16px;
  font-size: 28px;
}

.wishlist-page__grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 16px;
  align-items: stretch;
}

@media (max-width: 990px) {
  .wishlist-page__grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

@media (max-width: 600px) {
  .wishlist-page__grid {
    grid-template-columns: repeat(1, minmax(0, 1fr));
  }
}

.wishlist-card {
  border: 1px solid #e5e5e5;
  border-radius: 14px;
  overflow: hidden;
  background: #ffffff;
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.wishlist-card__media {
  aspect-ratio: 1 / 1;
  background: #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wishlist-card__media--empty::after {
  content: "No image";
  color: #777777;
  font-size: 12px;
}

.wishlist-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.wishlist-card__body {
  padding: 12px 14px 16px;
}

.wishlist-card__title {
  font-size: 15px;
  margin-bottom: 6px;
}

.wishlist-card__link {
  text-decoration: none;
  color: inherit;
}

.wishlist-card__price {
  font-size: 14px;
  color: #555555;
  margin-bottom: 10px;
}

.wishlist-card__actions {
  margin-top: auto;
}

.wishlist-card__stock {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #111111;
  color: #111111;
  border-radius: 999px;
  padding: 8px 14px;
  font-size: 13px;
}

.premier-wishlist-page .main-page-title,
.premier-wishlist-page .page-title {
  display: none !important;
}

.wishlist-card__add {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #111111;
  background: #111111;
  color: #ffffff;
  border-radius: 999px;
  padding: 8px 14px;
  font-size: 13px;
  cursor: pointer;
  text-decoration: none;
}

.wishlist-card__remove {
  position: absolute;
  top: 8px;
  right: 8px;
  border: 1px solid #111111;
  background: #ffffff;
  color: #111111;
  width: 28px;
  height: 28px;
  border-radius: 999px;
  cursor: pointer;
  line-height: 24px;
}

.wishlist-page__state {
  margin: 12px 0;
}

.wishlist-page__error {
  color: #b00020;
}

.wishlist-page__notice {
  grid-column: 1 / -1;
  border: 1px solid #e6e6e6;
  border-radius: 12px;
  padding: 14px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  background: #ffffff;
}

.wishlist-page__notice-text {
  font-size: 14px;
  color: #222222;
}

.wishlist-page__notice-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8px 14px;
  border-radius: 999px;
  border: 1px solid #111111;
  color: #111111;
  text-decoration: none;
  font-size: 13px;
  font-weight: 600;
}
{% endstyle %}

{% capture wishlist_config %}
  {"customerId": {{ customer.id | json }}, "shop": {{ shop.permanent_domain | json }}, "loginUrl": "https://shopify.com/77283033320/account?locale=en&region_country=US"}
{% endcapture %}

<div
  class="wishlist-page"
  data-wishlist-page
  data-wishlist-config='{{ wishlist_config | strip_newlines | escape }}'
>
  <h1 class="wishlist-page__title">{{ block.settings.heading }}</h1>
  <p class="wishlist-page__state" data-wishlist-loading style="display: none;">
    {{ block.settings.loading_text }}
  </p>
  <p class="wishlist-page__state wishlist-page__error" data-wishlist-error style="display: none;"></p>
  <p class="wishlist-page__state" data-wishlist-empty style="display: none;">
    {{ block.settings.empty_text }}
  </p>
  <div data-wishlist-list></div>
</div>

<script>
  document.body.classList.add("premier-wishlist-page");
</script>

{% render 'wishlist-loader' %}

{% schema %}
{
  "name": "Wishlist Page",
  "target": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Your Wishlist" },
    { "type": "text", "id": "loading_text", "label": "Loading Text", "default": "Loading wishlist..." },
    { "type": "text", "id": "empty_text", "label": "Empty Text", "default": "Your wishlist is empty." }
  ]
}
{% endschema %}
